
@using NoteMarketPlace.Models;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- title -->
    <title>Dashboard</title>


    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.css">

    <!-- FONT CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <link rel="stylesheet" href="~/content/admincss/adminstyle.css">

</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-expand-md navbar-light ">

        <div class="container">
            <a class="navbar-brand" href="#"><img src="~/Content/images/logo.png"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#anavbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="anavbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Admin/AdminDashboard">Dashboard</a>

                    </li>
                    <li class="nav-item">
                        <div>
                            <div class="adropdown">
                                <button class="dropbtn" id="deshboard-btn">
                                    Notes
                                </button>

                                <div class="adropdown-content">
                                    <a href="/Admin/NotesUnderReview">Notes Under Review</a>
                                    <a href="/Admin/PublishedNote">Published Notes</a>
                                    <a href="/Admin/DonwloadedNotes">Downloaded Notes</a>
                                    <a href="/Admin/RejectedNotes">Rejected Notes</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin/member">Member</a>
                    </li>
                    <li class="nav-item">
                        <div>
                            <div class="adropdown">
                                <button class="dropbtn" id="deshboard-btn">
                                    Reports
                                </button>

                                <div class="adropdown-content">
                                    <a href="/Admin/SpamReports">Spam report</a>

                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item">
                        <div>
                            <div class="adropdown">
                                <button class="dropbtn" id="deshboard-btn">
                                    Setting
                                </button>

                                <div class="adropdown-content">
                                    @{
                                        int id = Convert.ToInt32(Session["UserID"]);
                                        //  NoteMarketPlace.Models.noteCountryContex item = new NoteMarketPlace.Models.noteCountryContex();

                                        NoteMarketEntities db = new NoteMarketEntities();

                                        var item = db.Users.FirstOrDefault(m => m.ID == id && m.RoleID == 3);


                                        if (item != null)
                                        {
                                            <a href="/Admin/ManageSystemConfiguration">Manage System Configuration</a>
                                            <a href="/Admin/ManageAddministrator">Manage Addministrator</a>
                                            <a href="/Admin/ManageCategory">Manage Category</a>
                                            <a href="/Admin/ManageTypes">Manage Type</a>
                                            <a href="/Admin/ManageCountries">Manage Country</a>

                                        }
                                        else
                                        {
                                            <a href="/Admin/ManageSystemConfiguration">Manage System Configuration</a>
                                            
                                            <a href="/Admin/ManageCategory">Manage Category</a>
                                            <a href="/Admin/ManageTypes">Manage Type</a>
                                            <a href="/Admin/ManageCountries">Manage Country</a>
                                        }
                                    }
                                   

                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item">

                        <div>
                            <div class="adropdown">
                                <button class="dropbtn">
                                    @{
                                        int id1 = Convert.ToInt32(Session["UserID"]);
                                        //  NoteMarketPlace.Models.noteCountryContex item = new NoteMarketPlace.Models.noteCountryContex();

                                        NoteMarketEntities db1 = new NoteMarketEntities();

                                        var item1 = db1.Profiles.FirstOrDefault(m => m.SellerID == id1);


                                        if (item1 != null)
                                        {
                                            <img src="@Url.Content(item1.ProfilePic)" alt="search1" id="admin-dashbord-user">
                                        }
                                        else
                                        {
                                            <img src="~/Content/images/arrow-down.svg" alt="search1" id="admin-dashbord-user">
                                        }
                                    }

                                   
                                </button>

                                <div class="adropdown-content">
                                    <a href="/Admin/UpdateProfile">Update Profile</a>
                                    <a href="/Admin/ChangePassword">Change Password</a>
                                    <a href="/User/logout">Logout</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <button type="button" class="btn btn-primary" id="admin-dashboard-logout"><a href="/User/logout">Logout</a></button>

                    </li>
                </ul>

            </div>
        </div>

    </nav>






    @RenderBody()



    <hr>
    <!-- footer -->
    <div class="admin-footer row m-0 ">
        <div id="admin-version">
            <p>Version:1.1.24</p>
        </div>
        <div id="admin-copy">
            <p> copyright &copy; TatvaSoft All rights reserverd</p>
        </div>

    </div>




    <!-- JQuery -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/js/bootstrap/bootstrap.js"></script>
</body>

</html>

