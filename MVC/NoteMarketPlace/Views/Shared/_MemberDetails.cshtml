@model NoteMarketPlace.Models.NoteDetailsViewModel
@using NoteMarketPlace.Models;
<div class="row">
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-4">
                @{
                    
                    //  NoteMarketPlace.Models.noteCountryContex item = new NoteMarketPlace.Models.noteCountryContex();

                    NoteMarketEntities db = new NoteMarketEntities();

                    var item = db.Profiles.FirstOrDefault(m => m.SellerID == Model.user.ID);


                    if (item != null)
                    {
                        <img src="@Url.Content(item.ProfilePic)" alt="search1" id="admin-member1">
                        @*<img id="admin-member1" src="img/member.png">*@
                    }
                    else
                    {
                        <img src="~/Content/images/arrow-down.svg" alt="search1" id="admin-member1">
                    }
                }

            </div>
            <div class="col-md-8">
                <div class=" profile-tab" id="myTabContent1">
                    <div class=" fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-5">
                                <label>Frist Name:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.user.FirstName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>Last Name:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.user.LastName</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>Email</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.user.EmailID</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>DOB</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.DOB</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>Phone Number:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.PhoneNumber</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>College/University:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.University</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <div class=" profile-tab" id="myTabContent2">
                    <div class=" fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-5">
                                <label>Address 1:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.AddressLine1</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>Address 2:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.AddressLine2</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>City:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.City</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>State:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.State</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>Country:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.Country</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-5">
                                <label>Zip Code:</label>
                            </div>
                            <div class="col-md-7">
                                <p>@Model.profileUser.ZipCode</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
