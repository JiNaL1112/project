@model NoteMarketPlace.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- title -->
    <title>User Profile</title>


    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.css">

    <!-- FONT CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

</head>

<body>

    <div id="email-verification">
        <div id="email-verification-inner">
            <div id="email-logo">
                <img src="~/Content/images/logo.png">
            </div>
            <div id="email-heading">
                <h1 id="heading-1">
                    Email Verification
                </h1>
                <h4>Dear @ViewBag.firstname,</h4>
     
            </div>
            <div id="email-text">
                <p>Thanks for Signing up!</p>
                <p>Simply click below for email verification</p>
            </div>
            <div id="email-btn">
                <button type="submit" id="email-button" class="btn btn-primary  btn-block"><a href="/User/Index">Verify</a></button>
            </div>
        </div>
    </div>


    <!-- End Header -->
    <!-- JQuery -->
    <script src="~/Script/js/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Script/js/bootstrap/bootstrap.js"></script>
</body>

</html>
