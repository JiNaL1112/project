
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- title -->
    <title>Change password</title>


    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.css">

    <!-- FONT CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

</head>

<body>
    <!-- login form-->
    <section id="changepassword">
        <div class="container">

            <div class="row">

                <div class="col-md-6">
                    <div class="changepsw-logo">
                        <img src="~/Content/images/top-logo.png" class="rounded mx-auto d-block">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div id="form-content">
                        @using (Html.BeginForm("ChangePassword","User",FormMethod.Post,new {  }))
                        {
                        
                            <div id="header">
                                <div id="header-content-inner">
                                    <h1 id="header-1" class="text-center">Change Password</h1>
                                    <h1 id="header-2" class="header text-center">Enter your new password to change your password</h1>
                                    @ViewBag.matchpsw
                                    @ViewBag.matchpsw1
                                </div>
                            </div>
                            <div class="form-group" id="pswhelp">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="exampleInputPassword1" class="form-lable">Old Password</label>
                                    </div>
                                    <div class="col-md-6" id="psw">

                                    </div>
                                </div>
                                <div class="password">
                                    <input type="password" class="form-control" id="exampleInputPassword1" aria-describedby="passwordHelp" placeholder="Enter your old password" name="oldpsw" required>
                                    <img src="~/Content/images/eye.png">
                                </div>
                            </div>
                            <div class="form-group" id="pswhelp">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="exampleInputPassword1" class="form-lable">New Password</label>
                                    </div>
                                    <div class="col-md-6" id="psw">

                                    </div>
                                </div>
                                <div class="password">
                                    <input type="password" class="form-control" id="exampleInputPassword1" aria-describedby="passwordHelp" placeholder="Enter your new password" name="newpsw" required>
                                    <img src="~/Content/images/eye.png">
                                </div>
                            </div>
                            <div class="form-group" id="pswhelp">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="exampleInputPassword1" class="form-lable">Confirm Password</label>
                                    </div>
                                    <div class="col-md-6" id="psw">

                                    </div>
                                </div>
                                <div class="password">
                                    <input type="password" class="form-control" id="exampleInputPassword1" aria-describedby="passwordHelp" placeholder="Enter your confirm password" name="confirmpsw" required>
                                    <img src="~/Content/images/eye.png">
                                </div>
                            </div>
                            <button type="submit" id="button" class="btn btn-primary btn-lg btn-block">SUBMIT</button>

                        
                        }
                    </div>
                </div>

            </div>
        </div>

    </section>
    <!-- LOGIN END -->
    <!-- JQuery -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/js/bootstrap/bootstrap.js"></script>
</body>

</html>
