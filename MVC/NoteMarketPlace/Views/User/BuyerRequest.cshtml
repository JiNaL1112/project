@model IEnumerable<NoteMarketPlace.Models.NoteDetailsViewModel>
@{
    Layout = null;
    int i = 0;

}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- title -->
    <title>Buyer Requests</title>


    <!-- bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.css">

    <!-- FONT CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans
             :wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">

</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-expand-md navbar-light ">

        <div class="container">
            <a class="navbar-brand" href="#"><img src="~/Content/images/logo.png"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Search Notes </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sell Your Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Nuyar Requests </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">FAQ </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact Us </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">img </a>
                    </li>
                </ul>
                <button type="button" class="btn btn-primary" id="user-profile-logout">Logout</button>
            </div>
        </div>

    </nav>

    <div class="common">
        <div class="container">
            <div class="buyer-request-container">
                <div class="row">
                    <div class="col-md-6">
                        <h4 id="buyer-req">
                            Buyer Request

                        </h4>
                    </div>
                    <div class="col-md-6">
                        @using (Html.BeginForm("BuyerRequest", "User", FormMethod.Post))
                        {
                            <div class="row">
                                <div class="col-md-6" id="search-box">
                                    <img src="~/Content/images/search-icon.png" id="search-img">
                                    <input type="search" class="form-control" id="book-search" placeholder="    Search" value="@ViewData["GetBuyerDetails"]" name="searchstring">
                                </div>
                                <div class="col-md-6">
                                    <button type="submit" class="btn btn-primary" id="search-tab-button">Search</button>
                                </div>
                            </div>
                        }



                    </div>
                </div>

            </div>
            <div class="row">
                <h4 id="buyer-req">
                    @{
                        if (ViewBag.TotalRequest == 0)
                        {
                            <h4 id="buyer-req">No record found</h4>
                        }
                    }

                </h4>
            </div>
            <div class="in-progress-table">
                <table class="table border">
                    <thead>
                        <tr>
                            <th scope="col">SR NO.</th>
                            <th scope="col">
                                @Html.ActionLink("NOTE TITTLE", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "NOTE TITTLE", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                            </th>
                            <th scope="col">
                                @Html.ActionLink("CATEGORY", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "CATEGORY", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                            </th>
                            <th scope="col">
                                @Html.ActionLink("BUYER", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "BUYER", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })

                            </th>
                            <th scope="col">PHONE NO.</th>
                            <th scope="col">
                                @Html.ActionLink("SELL TYPE", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "SELL TYPE", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                            </th>
                            <th scope="col">
                                @Html.ActionLink("PRICE", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "PRICE", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                            </th>
                            <th scope="col">DOWNLOAD DATE/TIME</th>
                            <th scope="col">
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (NoteMarketPlace.Models.NoteDetailsViewModel item in (IEnumerable<NoteMarketPlace.Models.NoteDetailsViewModel>)Model)
                        {



                            <tr>
                                <th scope="row"> @(i = i+ 1)</th>
                                <td><a href="/User/NoteDetails?noteTitle=@item.note.Title">@item.note.Title</a></td>
                                <td>@item.notecategory.Name</td>
                                <td>@item.user.EmailID</td>
                                <td>
                                    +91 8160964882

                                </td>
                                <td>@item.referenceData.Value</td>
                                <td>&#36;@item.note.SellingPrice</td>
                                <td>27 Nov 2020,11:24:34</td>
                                <td>
                                    <div>
                                        <a href="/User/NoteDetails?noteTitle=@item.note.Title"><img src="~/Content/images/eye.png"></a>


                                        <div class="dropdown">
                                            <button class="dropbtn">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                                    <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                                </svg>
                                            </button>

                                            @using (Html.BeginForm("BuyerRequest", "User", FormMethod.Post, new { }))
                                            {
                                                <div class="dropdown-content">
                                                    <a href="/User/BuyerRequest?bookID=@item.note.NoteID&buyerID=@item.user.ID">Allow Download</a>
                                                </div>
                                            }


                                        </div>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>
            </div>
            <div class="in-progress-nav">
                <nav aria-label="Page navigation example">
                    @{
                        Double totalPages = ViewBag.TotalPages;
                        <ul class="pagination justify-content-center">
                            @if (ViewBag.PageNumber == 1)
                            {
                                <li class="page-item ">
                                    @Html.ActionLink("<", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber }, new { @class = "page-link" })

                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    @Html.ActionLink("<", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber - 1 }, new { @class = "page-link" })

                                </li>
                            }

                            @for (int j = 1; j <= totalPages; j++)
                            {

                                if (j == ViewBag.PageNumber)
                                {
                                    <li class="active page-item">
                                        @Html.ActionLink(j.ToString(), "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = j }, new { @class = "page-link" })
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        @Html.ActionLink(j.ToString(), "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = j }, new { @class = "page-link" })
                                    </li>
                                }




                            }
                            @if (ViewBag.PageNumber == totalPages)
                            {
                                <li class="page-item">
                                    @Html.ActionLink(">", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber }, new { @class = "page-link" })

                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    @Html.ActionLink(">", "BuyerRequest", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber + 1 }, new { @class = "page-link" })

                                </li>
                            }

                        </ul>
                    }
                </nav>
            </div>

        </div>
    </div>
    

        <hr>
        <!-- footer -->
        <div class="card-footer row m-0">
            <p id="copyright"> copyright &copy; TatvaSoft All rights reserverd</p>
            <div>
                <p>
                    <label class="footer-right">
                        <i class="fa fa-facebook circle-icon"></i>
                        <i class="fa fa-twitter circle-icon"></i>
                        <i class="fa fa-linkedin circle-icon"></i>

                    </label>
                </p>
            </div>
        </div>




        <!-- JQuery -->
        <script src="~/Script/js/jquery.min.js"></script>

        <!-- Bootstrap -->
        <script src="~/Script/js/bootstrap/bootstrap.js"></script>
</body>

</html>