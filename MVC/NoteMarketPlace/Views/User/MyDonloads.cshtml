@model IEnumerable<NoteMarketPlace.Models.NoteDetailsViewModel>
@{
    Layout = null;
    int i = 0;

    Layout = "~/Views/Shared/_RegisteredUser.cshtml";



}


    <div class="container">
        <div class="in-progress">
            <div class="row">
                <div class="col-md-6">
                    <h4 id="progress-heading">
                        My Downloads
                        @ViewBag.rating
                        @ViewBag.comment
                    </h4>
                </div>
                <div class="col-md-6">
                    @using (Html.BeginForm("MyDonloads", "User", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-6" id="search-box">
                                <img src="~/Content/images/search-icon.png" id="search-img">
                                <input type="search" class="form-control" id="book-search" placeholder="    Search" value="@ViewData["GetDownloadsData"]" name="searchstring">
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary" id="search-tab-button">Search</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="row">
                <h4 id="buyer-req">
                    @{
                        if (ViewBag.TotalRequest == 0)
                        {
                            <h4 id="buyer-req">No record found</h4>

                        }
                        
                    }

                </h4>
            </div>
        </div>
        <div class="in-progress-table">
            <table class="table ">
                
                
                <thead>
                    <tr>
                        <th scope="col">SR NO.</th>
                        <th scope="col">
                            @Html.ActionLink("NOTE TITTLE", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "NOTE TITTLE", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                        </th>
                        <th scope="col">
                            @Html.ActionLink("CATEGORY", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "CATEGORY", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                        </th>
                        <th scope="col">
                            @Html.ActionLink("BUYER", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "BUYER", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })

                        </th>
                        
                        <th scope="col">
                            @Html.ActionLink("SELL TYPE", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "SELL TYPE", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                        </th>
                        <th scope="col">
                            @Html.ActionLink("PRICE", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc"), SortBy = "PRICE", PageNumber = ViewBag.PageNumber == 0 ? 1 : ViewBag.PageNumber })
                        </th>
                        <th scope="col">DOWNLOAD DATE/TIME</th>
                        <th scope="col">
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (NoteMarketPlace.Models.NoteDetailsViewModel item in (IEnumerable<NoteMarketPlace.Models.NoteDetailsViewModel>)Model)
                    {
                        <tr>

                            <th scope="row"> @(i = i+ 1)</th>
                            <td><a href="/User/NoteDetails?noteTitle=@item.note.Title">@item.note.Title</a></td>
                            <td>@item.notecategory.Name</td>
                            <td>@item.user.EmailID</td>
                            <td>@item.referenceData.Value</td>
                            <td>&#36;@item.note.SellingPrice</td>
                            <td>27 Nov 2020,11:24:34
                            @item.download.ID
                            </td>
                            <td>
                                <div>
                                    <img src="~/Content/images/eye.png">
                                    <div class="dropdown">
                                        <button class="dropbtn">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                                                <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                            </svg>
                                        </button>

                                        <div class="dropdown-content">
                                            <a href="/User/MyDonloads?bookid=@item.note.NoteID&DownloadID=@item.download.ID">Download Note</a>
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter" id="feedback-button">
                                                Feedback
                                             
                                            </button>
                                            <a href="/User/noteInappropriate?dID=@item.download.ID" onclick="return confirm('Are you sure to you want to mark this report as spam , you can not update it later?')">Report as Inappropriate</a>
                                        </div>
                                    </div>
                                    <!-- Button trigger modal -->
                                    <!-- Modal -->
                                    @using (Html.BeginForm("noteReview", "User", FormMethod.Post, new { dID = item.download.ID }))
                                    {
                                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered" role="document">

                                       
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Add Review</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="container">
                                                    <!--   <form> -->

                                                    <div class="row">
                                                        <div class="col-md-12 col-sm-12">
                                                            <div class="rate">
                                                                <input type="radio" id="star5" name="rate" value="5" />
                                                                <label for="star5" title="text">5 stars</label>
                                                                <input type="radio" id="star4" name="rate" value="4" />
                                                                <label for="star4" title="text">4 stars</label>
                                                                <input type="radio" id="star3" name="rate" value="3" />
                                                                <label for="star3" title="text">3 stars</label>
                                                                <input type="radio" id="star2" name="rate" value="2" />
                                                                <label for="star2" title="text">2 stars</label>
                                                                <input type="radio" id="star1" name="rate" value="1" />
                                                                <label for="star1" title="text">1 star</label>
                                                              
                                                                <input type="hidden" name="dID" value="@item.download.ID" />
                                                                
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-md-12 col-sm-12">
                                                            <div class="profile">
                                                                <label class="user-profile-lable">Comments*</label>
                                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="4" placeholder="Comments..." name="ratingComment"></textarea>

                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-primary" id="review-submit-button" name="submit">submit</button>
                                                   
                                                    </div>

    <!-- </form> -->
                                                    </div>
                                            </div>

                                        </div>


                                    </div>
                                </div>

                                    }
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <div class="in-progress-nav">
            <nav aria-label="Page navigation example">
                @{
                    Double totalPages = ViewBag.TotalPages;
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.PageNumber == 1)
                        {
                            <li class="page-item ">
                                @Html.ActionLink("<", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber }, new { @class = "page-link" })

                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                @Html.ActionLink("<", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber - 1 }, new { @class = "page-link" })

                            </li>
                        }

                        @for (int j = 1; j <= totalPages; j++)
                        {

                            if (j == ViewBag.PageNumber)
                            {
                                <li class="active page-item">
                                    @Html.ActionLink(j.ToString(), "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = j }, new { @class = "page-link" })
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    @Html.ActionLink(j.ToString(), "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = j }, new { @class = "page-link" })
                                </li>
                            }




                        }
                        @if (ViewBag.PageNumber == totalPages)
                        {
                            <li class="page-item">
                                @Html.ActionLink(">", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber }, new { @class = "page-link" })

                            </li>
                        }
                        else
                        {
                            <li class="page-item">
                                @Html.ActionLink(">", "MyDonloads", new { SortOrder = ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder, SortBy = ViewBag.SortBy == null ? "NOTE TITTLE" : ViewBag.SortBy, PageNumber = ViewBag.PageNumber + 1 }, new { @class = "page-link" })

                            </li>
                        }

                    </ul>
                }
            </nav>
        </div>
    </div>


