@model NoteMarketPlace.Models.NoteCategory
@{
    int i = 0;

    Layout = "~/Views/Shared/_RegisteredAdmin.cshtml";

}
@using (Html.BeginForm("AddCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "user-profile" }))
{

    <div class="container">
        <div class="row">
            <h1 id="heading">Add Category</h1>
        </div>
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="form-group">
                    <label class="user-profile-lable">Category Name*</label>
                    
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "ncname", @placeholder = "Enter Category Name" , @Value = @ViewData["Usermail"] })

                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="col-md-6"></div>
            <div class="col-md-6 col-sm-6">
                <div class="form-group">
                    <label class="user-profile-lable">Description*</label>
                   
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @id = "ncdescription", @placeholder = "Enter your description" , @rows = "4" })

                    @Html.ValidationMessageFor(m => m.Description)
                </div>
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-primary" id="my-profile-submit">Submit</button>
        </div>
    </div>

}

